<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_200"
    android:orientation="horizontal">

    <TextView
        android:text="timeLineTime"
        android:id="@+id/timeLineTime"
        android:layout_width="40dp"
        android:background="@drawable/card"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/background_dark"
        android:textSize="12sp" />

    <codescripters.news.borders.view.TimeLineView
        android:id="@+id/timeLineView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingBottom="8dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="44dp"
        app:beginLine="#20000000"
        app:endLine="#20000000"
        app:lineWidth="2dp"
        app:timeLineMarker="@drawable/almond_blossoms"
        app:timeLineMarkerSize="50dp" />

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center_vertical"
        android:background="@drawable/card"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <ImageView
            android:id="@+id/timeLineIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/starry_night_over_the_rhone" />

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:id="@+id/timeLineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:text="name"
            android:textColor="@color/blue_grey_800"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/timeLineDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
            android:textSize="10sp" />

    </LinearLayout>

</LinearLayout>